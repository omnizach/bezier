{
  "name": "bezier",
  "version": "1.0.0",
  "description": "Small library for manipulating and drawing Bezier curves",
  "main": "bezier.js",
  "scripts": {
    "coffee": "coffee --compile --map bezier.coffee",
    "uglify": "uglifyjs --compress --mangle --screw-ie8 --in-source-map bezier.js.map -o bezier.min.js bezier.js",

    "build": "npm run coffee && npm run uglify",
    "prepublish": "npm run build",
    "docs": "coffeedoc --renderer gfm --hide-private bezier.coffee",
    "clean": "rm *.js && rm *.map"
  },
  "author": "Zach Young",
  "license": "MIT",
  "devDependencies": {
    "coffee": "^3.0.3",
    "coffeedoc": "^0.3.1",
    "uglify-js": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omnizach/bezier"
  }
}
